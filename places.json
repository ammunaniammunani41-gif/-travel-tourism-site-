function showDetails() {
  const place = document.getElementById("placeInput").value.toLowerCase();
  const travelWay = document.getElementById("travelWay").value;
  const outputDiv = document.getElementById("output");

  if (travelData[place]) {
    const data = travelData[place];
    outputDiv.innerHTML = `
      <h2>${place.toUpperCase()}</h2>
      <h3>Popular Attractions:</h3>
      <ul>${data.attractions.map(a => `<li>${a}</li>`).join("")}</ul>
      <h3>Famous Food:</h3>
      <ul>${data.food.map(f => `<li>${f}</li>`).join("")}</ul>
      <h3>How to Reach by ${travelWay}:</h3>
      <p>${data.transport[travelWay]}</p>
    `;
  } else {
    outputDiv.innerHTML = `<p>Sorry! No data found for "${place}"</p>`;
  }
}
